{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "CommonJS",
    "target": "es2020",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./output",
    "rootDir": ".",
    "types": [
      "webpack-env",
      "node"
    ],
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist/type",
    "lib": [
      "esnext",
      "es5",
      "ES2016",
      "ES2020"
    ],
    "paths": {
      "@": ["./src"],
      "@config":[ "./src/config"],
      "@controller":[ "./src/controller"],
      "@core": ["./src/core"],
      "@daos": ["./src/daos"],
      "@middleware":[ "./src/middleware"],
      "@services": ["./src/services"],
      "@types": ["./src/types"],
      "@utils": ["./src/utils"]
    }
  },
  "include": [
    "test",
    "src",
    "src/**/*",
    "global.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
